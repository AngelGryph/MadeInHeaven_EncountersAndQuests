DEFINE_ACTION_FUNCTION blue_dragons
BEGIN
  // Blue Dragons
  //
  // Abazigal
  //
  // Claw: 1d8
  // Bite: 3d8 + 1d4 electrical

  MAKE_PATCH
    patch_ability_inline=>~ability_dicenum=>3 ability_dicesize=>8~
    delete_effect=>~opcode = 12~
    add_effect_inline=>~opcode=>12 target=>2 timing=>1 parameter2=>0x00040000 dicenum=>1 dicesize=>4~
  END

  LAUNCH_ACTION_FUNCTION edit_item
    STR_VAR
    item	= "dragblue"
    edits	= "patch_data"
  END

  MAKE_PATCH
    level_all=>22
    thac0=>"-5"
    ac=>"-8"

    // Note:
    // Bite is in off hand, dragons get multiple
    // claw attacks but only one bite
    replace_items=>"dr1-8s(weapon1) dragblue(shield)"
  END

  LAUNCH_ACTION_FUNCTION edit_creature
    STR_VAR
    creature	= "dragblue"
    edits	= "patch_data"
  END
END	// blue_dragons


