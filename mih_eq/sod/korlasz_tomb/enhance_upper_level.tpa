    edits	= "patch_data"
  END

  COPY_EXISTING "bdsarc01.bcs" "override"
                "bdsarc04.bcs" "override"
    DECOMPILE_AND_PATCH
    BEGIN
      REPLACE_TEXTUALLY CASE_INSENSITIVE EXACT_MATCH "bdskgr02" "mh#bwght"
    END
